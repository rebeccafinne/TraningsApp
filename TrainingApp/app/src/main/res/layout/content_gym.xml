<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="kandidat.trainingapp.GymActivity"
    tools:showIn="@layout/activity_gym">

    <Button
        android:id="@+id/btn_timer_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/start_pause_timer"
        app:layout_constraintBottom_toBottomOf="@+id/timer_text"
        app:layout_constraintEnd_toStartOf="@+id/btn_timer_stop"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/timer_text"
        app:layout_constraintTop_toTopOf="@+id/timer_text" />

    <Button
        android:id="@+id/btn_timer_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stop_timer"
        app:layout_constraintBottom_toBottomOf="@+id/btn_timer_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_timer_start"
        app:layout_constraintTop_toTopOf="@+id/btn_timer_start" />

    <TextView
        android:id="@+id/timer_text"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="00:00:00"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_timer_start"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_timer_paus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/paus_timer"
        app:layout_constraintEnd_toEndOf="@+id/btn_timer_start"
        app:layout_constraintStart_toStartOf="@+id/btn_timer_start"
        app:layout_constraintTop_toBottomOf="@+id/btn_timer_start" />
</android.support.constraint.ConstraintLayout>
